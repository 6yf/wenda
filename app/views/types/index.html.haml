%h1 #{@types.count} Types

%table
  %thead
    %tr
      %th Name
      %th{ :colspan => 3 }
  
  %tbody
    - for type in @types
      %tr{ :class => cycle(:odd, :even) }
        %td= type.name
        %td= link_to 'Show', type
        %td= link_to 'Edit', edit_type_path(type)
        %td= link_to 'Destroy', type, :confirm => 'Are you sure?', :method => :delete

%br
= link_to 'New type', new_type_path
|
= link_to 'Back to Homepage', root_path
