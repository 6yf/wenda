- form_for(@user) do |f|
  = f.error_messages
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :password
    %br
    = f.password_field :password
  .field
    = f.label :info
    %br
    = f.text_field :info

  .actions
    = f.submit
